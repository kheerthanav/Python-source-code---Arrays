from typing import List                                                # To specify that the function expects a list of integers.

def sortArr(arr: List[int]) -> int:                                    # Takes a list of integers
    arr.sort()                                                         # Sorts the list in ascending order
    return arr[-1]                                                     # Returns the last element i.e largest element

if __name__ == "__main__":                                             # Main execution block
    arr = [2, 5, 1, 3, 0]                                              # A list arr is defined
    print("The largest element in the array is:", sortArr(arr))        # It calls sortArr(arr) and prints the largest number in the array
                                                                       # Time complexity : O(N*log(N))

