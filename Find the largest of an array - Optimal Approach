def findLargestElement(arr, n):
    max_val = arr[0]
    for i in range(0, n):
        if max_val < arr[i]:
            max_val = arr[i]
    return max_val

if __name__ == "__main__":
    arr = [2, 3, 1, 3, 0]
    n = len(arr)
    max_val = findLargestElement(arr, n)
    print("The largest element in the array is:", max_val)
